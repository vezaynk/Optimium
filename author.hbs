{{!< default}}

{{> header_page}}

{{! The main content area on author page }}
<main id="content_Optimium" role="main">

    <div id="content_column_Optimium" class="boxed-cargo">

        <div class="author_head">
            {{#author}}
                <img src="{{image}}" alt="{{name}}" class="img-square-frame-circle">
                <h1>{{name}}</h1>
                <a class="website" href="{{website}}">{{website}}</a> <br>
                <p>{{bio}}</p> <br>
                <span class="fa fa-file"> {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}</span> 
                <a class="fa fa-rss" href="{{url}}rss/"> follow</a>
            {{/author}}
        </div>

        {{#foreach posts}}

        <article class="index_post {{post_class}}">
            <div class="left_side_article col-lg3-md3-sm3">
                <span class="fa fa-clock-o"></span> <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time> <br>
                <span>{{tags prefix=""}}</span>
            </div>
            <div class="right_side_article col-off1lg8-off1md8-off1sm8">
                <header class="post_header">
                    <h2 class="post_title"><a href="{{url}}">{{{title}}}</a></h2>
                </header>
                <p class="post_excerpt">{{excerpt words="50"}}&hellip;</p>
                <a href="{{url}}" class="read_more_btn">Read More</a>
            </div>
        </article>

        {{/foreach}}

        {{pagination}}

    </div>

</main>