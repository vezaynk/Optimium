{{!< default}}

{{> header_page}}

{{! The main content area on author page }}
<main id="content_Optimium" role="main">

    <div id="content_column_Optimium" class="boxed-cargo">
        <article class="author_head">
            {{#author}}
                <img src="{{image}}" alt="{{name}}" class="img-square-frame-circle">
                <h1>{{name}}</h1>
                <a class="website" href="{{website}}"><span class="fa fa-link"></span> {{website}}</a> <br>
                <p>{{bio}}</p> <br>
                <span class="fa fa-file"> {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}</span> 
                <a class="fa fa-rss" href="{{url}}rss/"> follow</a>
            {{/author}}
        </article>

        {{#foreach posts}}

        {{#has tag="link"}}
       {{!-- This is a link --}}
	   <article class="index_post {{post_class}}"><div class="image_container">
					<img src="{{image}}" alt="Post Image" class="post_image"></div>
				<div class="left_side_article"> <span class="fa fa-clock-o"></span>
					<time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time>
					<br><span>{{tags prefix=""}}</span> </div>
				<div class="right_side_article">
					<header class="post_header">
						<h2 class="post_title"><a href="{{excerpt}}">{{{title}}}</a></h2> {{#author}}
						<h5 style="margin-top: 10px;">By <a href="{{url}}">{{name}}</a></h5> {{/author}} </header>
					<p class="post_excerpt">{{excerpt}}</p> <a href="{{excerpt}}" class="read_more_btn">Go There</a> </div>
			</article>
	   
    {{else}}
        
		<article class="index_post {{post_class}}"><div class="image_container">
					<img src="{{image}}" alt="Post Image" class="post_image"></div>
				<div class="left_side_article"> <span class="fa fa-clock-o"></span>
					<time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time>
					<br><span>{{tags prefix=""}}</span> </div>
				<div class="right_side_article">
					<header class="post_header">
						<h2 class="post_title"><a href="{{url}}">{{{title}}}</a></h2> {{#author}}
						<h5 style="margin-top: 10px;">By <a href="{{url}}">{{name}}</a></h5> {{/author}} </header>
					<p class="post_excerpt">{{excerpt words="50"}}&hellip;</p> <a href="{{url}}" class="read_more_btn">Read More</a> </div>
			</article>
		
    {{/has}}

        {{/foreach}}

        


    </div>
</main>{{pagination}}